<brls:Box
        wireframe="false"
        focusable="false"
        paddingLeft="10"
        paddingRight="10"
        width="auto"
        hideHighlightBackground="true"
        height="auto">

        <brls:Box
                marginTop="5"
                marginRight="15">
                <brls:Image
                        id="avatar/talker"
                        width="40"
                        height="40"
                        visibility="invisible"
                        aspectRatio="1"
                        scalingType="fit"
                        borderThickness="4"
                        borderColor="@theme/color/grey_1"
                        cornerRadius="100"
                        image="@res/pictures/default_avatar.png" />
        </brls:Box>

        <brls:Box
                id="msg/content_box"
                backgroundColor="@theme/color/grey_1"
                highlightCornerRadius="16"
                cornerRadius="16"
                focusable="true"
                axis="column"
                grow="1"
                padding="15">
                <TextBox
                        id="msg/content"
                        width="auto"
                        height="auto"
                        grow="1"
                        wireframe="false" />
        </brls:Box>

        <brls:Box
                marginTop="5"
                marginLeft="15">
                <brls:Image
                        id="avatar/mine"
                        width="40"
                        height="40"
                        visibility="invisible"
                        aspectRatio="1"
                        scalingType="fit"
                        borderThickness="4"
                        borderColor="@theme/color/grey_1"
                        cornerRadius="100"
                        image="@res/pictures/default_avatar.png" />
        </brls:Box>
</brls:Box>
<brls:Box
        width="auto"
        height="auto"
        axis="row"
        justifyContent="spaceBetween"
        alignItems="center">

    <brls:Box
            wireframe="false"
            marginRight="4"
            axis="column">
        <brls:Image
                id="userinfo/avatar"
                width="auto"
                maxHeight="90%"
                aspectRatio="1"
                scalingType="fit"
                marginLeft="10"
                borderThickness="4"
                borderColor="@theme/color/grey_1"
                cornerRadius="100"
                image="@res/pictures/default_avatar.png"/>
    </brls:Box>

    <brls:Box
            width="auto"
            height="100%"
            axis="column"
            grow="1.0"
            marginLeft="10"
            alignItems="flexStart">

        <brls:Label
                id="userinfo/label/username"
                width="auto"
                height="auto"
                wireframe="false"
                grow="1"
                fontSize="20"
                marginBottom="4"
                verticalAlign="bottom"/>

        <brls:Label
                id="userinfo/label/misc"
                width="auto"
                height="auto"
                fontSize="16"
                grow="1"
                marginTop="4"
                verticalAlign="top"
                wireframe="false"
                textColor="@theme/font/grey"/>

    </brls:Box>

    <brls:Box
            id="userinfo/box/hint"
            visibility="gone"
            width="100"
            height="34"
            marginRight="10"
            cornerRadius="6"
            justifyContent="center"
            alignItems="center">
        <SVGImage
                id="userinfo/svg/hint"
                width="16"
                height="16"
                marginLeft="6"
                marginRight="6"/>
        <brls:Label
                id="userinfo/label/hint"
                textColor="@theme/font/grey"
                fontSize="16"
                marginTop="1"/>
    </brls:Box>

</brls:Box>
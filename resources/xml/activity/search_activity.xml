<brls:AppletFrame
        iconInterpolation="linear"
        headerHidden="true"
        footerHidden="false">
    <brls:Box
            axis="column"
            grow="1">
        <SearchTab
                id="search/tab"
                grow="1"/>

        <brls:Box
                positionType="absolute"
                positionRight="50"
                positionTop="0"
                width="340"
                height="65"
                alignItems="center">
            <brls:Box
                    id="search/box"
                    width="300"
                    height="35"
                    backgroundColor="#E3E5E7"
                    paddingLeft="15"
                    cornerRadius="6">
                <brls:Label
                        id="search/label/key"
                        fontSize="14"
                        textColor="#18191c"
                        text="@i18n/wiliwili/home/common/search"/>
                <HintLabel
                        height="35"
                        positionType="absolute"
                        positionRight="15"
                        fontSize="14"
                        textColor="#18191c"
                        text="y"/>
            </brls:Box>
        </brls:Box>

        <ButtonClose
                positionType="absolute"
                positionTop="6"
                positionRight="30"/>

    </brls:Box>
</brls:AppletFrame>

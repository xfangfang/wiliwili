<brls:Box
        height="auto"
        marginTop="12"
        width="auto"
        clipsToBounds="false"
        wireframe="false">
    <brls:Box
            wireframe="false"
            positionType="absolute"
            positionRight="0"
            positionTop="-62"
            justifyContent="flexEnd"
            alignItems="center"
            height="50">
        <SVGImage
                culled="false"
                width="12"
                height="13"
                SVG="@res/svg/ico-sprite-info.svg"/>
        <brls:Label
                id="home/hots/weekly/reminder"
                culled="false"
                marginLeft="4"
                marginRight="10"
                fontSize="13"
                textColor="@theme/font/grey"
                text="每周五晚18:00更新"/>

        <brls:Box
                id="home/hots/weekly/box"
                width="160"
                height="35"
                backgroundColor="@theme/color/grey_2"
                marginRight="40"
                paddingLeft="10"
                cornerRadius="6">
            <brls:Label
                    id="home/hots/weekly/label"
                    culled="false"
                    marginLeft="4"
                    fontSize="13"
                    singleLine="true"
                    text="第 N 期(00/00更新)"/>
            <HintLabel
                    culled="false"
                    height="35"
                    positionType="absolute"
                    positionRight="4"
                    fontSize="14"
                    text="x"/>
        </brls:Box>
    </brls:Box>

    <RecyclingGrid
            paddingLeft="20"
            paddingRight="20"
            grow="1"
            spanCount="@style/wiliwili/grid/span/4"
            itemHeight="260.5"
            wireframe="false"
            id="home/hots/weekly/recyclingGrid"/>

</brls:Box>
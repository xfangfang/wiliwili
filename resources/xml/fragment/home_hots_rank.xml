<brls:Box
        axis="column"
        marginTop="12"
        width="auto"
        height="auto">
    <brls:Box
            wireframe="false"
            positionType="absolute"
            positionRight="0"
            positionTop="-62"
            justifyContent="flexEnd"
            alignItems="center"
            height="50">
        <SVGImage
                culled="false"
                width="12"
                height="13"
                SVG="@res/svg/ico-sprite-info.svg"/>
        <brls:Label
                id="home/hots/rank/note"
                culled="false"
                fontSize="13"
                marginLeft="4"
                marginRight="10"
                singleLine="true"
                textColor="@theme/font/grey"
                text="排行榜根据稿件内容质量，近期的数据综合展示，动态更新"/>

        <brls:Box
                id="home/hots/rank/box"
                width="160"
                height="35"
                backgroundColor="@theme/color/grey_2"
                marginRight="40"
                paddingLeft="10"
                cornerRadius="6">
            <brls:Label
                    id="home/hots/rank/label"
                    culled="false"
                    marginLeft="4"
                    fontSize="13"
                    singleLine="true"
                    text="榜单：全站"/>
            <HintLabel
                    culled="false"
                    height="35"
                    positionType="absolute"
                    positionRight="4"
                    fontSize="14"
                    text="x"/>
        </brls:Box>
    </brls:Box>
    <RecyclingGrid
            paddingLeft="20"
            paddingRight="20"
            grow="1"
            spanCount="4"
            itemHeight="237.5"
            wireframe="false"
            id="home/hots/rank/recyclingGrid"/>
</brls:Box>
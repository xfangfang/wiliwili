<brls:Box
        axis="row"
        width="auto"
        height="auto">
    <RecyclingGrid
            width="270"
            paddingLeft="10"
            paddingRight="10"
            marginTop="20"
            marginBottom="8"
            itemHeight="50"
            preFetchLine="2"
            spanCount="1"
            wireframe="false"
            lineColor="@theme/color/line"
            lineRight="1"
            id="dynamic/up/recyclingGrid"/>

    <brls:Box
            paddingTop="20"
            paddingBottom="8"
            wireframe="false"
            grow="1">
            <RecyclingGrid
                    paddingLeft="20"
                    paddingRight="20"
                    itemHeight="250"
                    grow="1"
                    preFetchLine="2"
                    spanCount="3"
                    wireframe="false"
                    id="dynamic/videoList"/>
    </brls:Box>
</brls:Box>
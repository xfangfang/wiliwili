<brls:Box
        wireframe="false"
        positionTop="-8"
        axis="column"
        width="auto"
        height="auto">

    <brls:Box
            wireframe="false"
            alignItems="center"
            height="50">

        <brls:Box
                id="home/live/box"
                width="180"
                height="35"
                backgroundColor="@theme/color/grey_2"
                marginRight="10"
                paddingLeft="10"
                marginLeft="20"
                cornerRadius="6">
            <brls:Label
                    id="home/live/label"
                    culled="false"
                    fontSize="13"
                    singleLine="true"
                    maxWidth="140"/>
            <HintLabel
                    positionType="absolute"
                    positionRight="15"
                    culled="false"
                    height="35"
                    marginLeft="4"
                    fontSize="14"
                    text="x"/>
        </brls:Box>

    </brls:Box>

    <RecyclingGrid
            marginTop="10"
            paddingLeft="20"
            paddingRight="20"
            grow="1"
            spanCount="4"
            itemHeight="200"
            wireframe="false"
            id="home/live/recyclingGrid"/>
</brls:Box>
<brls:Box
        wireframe="false"
        axis="column"
        width="auto"
        height="auto">
    <brls:AppletFrame
            iconInterpolation="linear"
            headerHidden="true"
            footerHidden="false"
            grow="1">
        <brls:Box
                axis="column"
                margin="8"
                grow="1">
            <brls:Box
                    margin="8"
                    height="100">
                <brls:Image
                        scalingType="fill"
                        id="collection/cover"
                        image="@res/pictures/playlistbg.png"
                        height="100"
                        width="178"
                        focusable="true"/>
                <brls:Box
                        marginLeft="20"
                        marginTop="20"
                        height="100"
                        axis="column">
                    <TextBox
                            marginBottom="0"
                            id="collection/label/title"
                            fontSize="30"
                            lineHeight="1.5"
                            text="title"
                            width="100%"
                            height="45"/>
                    <brls:Label
                            id="collection/label/subtitle"
                            fontSize="16"
                            singleLine="true"
                            textColor="@theme/font/grey"
                            width="100%"
                            text="subtitle"/>
                </brls:Box>
            </brls:Box>

            <RecyclingGrid
                    paddingLeft="20"
                    paddingRight="20"
                    itemHeight="250"
                    grow="1"
                    preFetchLine="1"
                    spanCount="4"
                    wireframe="false"
                    id="collection/recyclingGrid"/>
        </brls:Box>
    </brls:AppletFrame>
</brls:Box>
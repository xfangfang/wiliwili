<brls:Box
        width="1280"
        height="auto"
        axis="column">

    <brls:AppletFrame
            wireframe="false"
            id="grid_dropdown/applet"
            width="100%"
            height="auto"
            grow="1"
            headerHidden="true"
            footerHidden="true"
            backgroundColor="@theme/brls/backdrop">

        <brls:Box
                width="100%"
                height="auto"
                grow="1"
                axis="column"
                justifyContent="flexEnd">

            <brls:Box
                    id="grid_dropdown/content"
                    width="100%"
                    height="auto"
                    axis="column"
                    backgroundColor="@theme/brls/background">

                <brls:Box
                        id="grid_dropdown/header"
                        height="@style/brls/dropdown/header_height"
                        axis="row"
                        paddingTop="@style/brls/applet_frame/header_padding_top_bottom"
                        paddingBottom="@style/brls/applet_frame/header_padding_top_bottom"
                        paddingLeft="@style/brls/applet_frame/header_padding_sides"
                        paddingRight="@style/brls/applet_frame/header_padding_sides"
                        marginLeft="@style/brls/applet_frame/padding_sides"
                        marginRight="@style/brls/applet_frame/padding_sides"
                        lineColor="@theme/brls/applet_frame/separator"
                        lineBottom="1px">

                    <brls:Label
                            wireframe="false"
                            id="grid_dropdown/title_label"
                            width="auto"
                            height="auto"
                            text="@i18n/wiliwili/home/live/dialog"
                            marginTop="@style/brls/applet_frame/header_title_top_offset"
                            fontSize="@style/brls/dropdown/header_title_font_size"/>

                </brls:Box>

                <brls:Box
                    width="100%"
                    marginLeft="20"
                    marginRight="20"
                    grow="1">
                    <RecyclingGrid
                            width="270"
                            paddingLeft="10"
                            paddingRight="10"
                            marginTop="20"
                            marginBottom="8"
                            itemHeight="50"
                            preFetchLine="2"
                            spanCount="1"
                            lineColor="@theme/color/line"
                            lineRight="1"
                            id="area/mainList"/>

                    <brls:Box
                            paddingTop="20"
                            paddingBottom="8"
                            wireframe="false"
                            grow="1">
                        <RecyclingGrid
                                paddingLeft="20"
                                paddingRight="20"
                                itemHeight="100"
                                grow="1"
                                preFetchLine="2"
                                spanCount="8"
                                wireframe="false"
                                id="area/subList"/>
                    </brls:Box>
                </brls:Box>

                <ButtonClose
                        positionType="absolute"
                        positionTop="10"
                        positionRight="10"/>

            </brls:Box>

        </brls:Box>

    </brls:AppletFrame>
</brls:Box>
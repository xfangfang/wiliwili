<brls:Box
        wireframe="false"
        axis="column"
        width="auto"
        height="auto">
    <AutoTabFrame
            demandMode="false"
            id="search/tab/frame"
            grow="1"
            defaultTab="2"
            tabHeight="65"
            tabFontSize="16"
            tabItemActiveTextColor="@theme/color/bilibili"
            sidebarPosition="top">

        <Tab label="@i18n/wiliwili/search/t0"
             fontSize="18">
            <SearchHistory id="search/tab/history"/>
        </Tab>

        <Tab label="@i18n/wiliwili/search/t1"
             fontSize="18">
            <SearchHots id="search/tab/hots"/>
        </Tab>

        <Tab label="@i18n/wiliwili/search/t2"
             fontSize="18">
            <SearchOrder id="search/tab/video"/>
        </Tab>

        <Tab label="@i18n/wiliwili/search/t3"
             fontSize="18">
            <SearchBangumi id="search/tab/bangumi"/>
        </Tab>

        <Tab label="@i18n/wiliwili/search/t4"
             fontSize="18">
            <SearchCinema id="search/tab/cinema"/>
        </Tab>

    </AutoTabFrame>

</brls:Box>
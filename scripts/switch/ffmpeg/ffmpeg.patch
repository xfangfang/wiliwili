+    hwctx->vic_version = AV_NVTEGRA_ENCODE_REV(4,0);
+
+    /* Note: Official code only sets this for the nvdec channel */
+    if (hwctx->nvdec_version) {
+        err = av_nvtegra_channel_set_submit_timeout(&hwctx->nvdec_channel, 1000);
+        if (err < 0)
